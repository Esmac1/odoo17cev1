services:
  db:
    image: postgres:15
    container_name: odoo-db
    environment:
      - POSTGRES_DB=odoo1
      - POSTGRES_USER=odoo
      - POSTGRES_PASSWORD=odoo_pass
    volumes:
      - odoo-db-data:/var/lib/postgresql/data
    restart: always

  odoo:
    image: odoo:17
    container_name: odoo
    depends_on:
      - db
    ports:
      - "8069:8069"
    volumes:
      - ./odoo-data:/var/lib/odoo
      - ./custom_addons:/mnt/extra-addons
      - ./config/odoo.conf:/etc/odoo/odoo.conf
    environment:
      - HOST=db
      - PORT=5432
      - USER=odoo
      - PASSWORD=odoo_pass
      - DATABASE=odoo1
    restart: always

volumes:
  odoo-db-data:
