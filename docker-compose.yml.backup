version: '3.8'
services:
  db:
    image: postgres:15
    container_name: odoo-db
    environment:
      POSTGRES_DB: odoo17
      POSTGRES_USER: odoo
      POSTGRES_PASSWORD: odoo_pass
    volumes:
      - db_data:/var/lib/postgresql/data
    restart: always

  odoo:
    image: odoo:17
    container_name: odoo
    depends_on:
      - db
    ports:
      - "8069:8069"
    volumes:
      - ./custom_addons:/mnt/custom_addons
      - ./extra-addons:/mnt/extra-addons
      - ./config:/etc/odoo
      - ./filestore:/var/lib/odoo/filestore
    restart: always

volumes:
  db_data:
