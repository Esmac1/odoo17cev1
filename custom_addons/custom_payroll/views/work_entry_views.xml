<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Work Entry Tree View -->
    <record id="view_work_entry_tree" model="ir.ui.view">
        <field name="name">custom_payroll.work_entry.tree</field>
        <field name="model">custom_payroll.work_entry</field>
        <field name="arch" type="xml">
            <tree string="Work Entries">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="work_entry_type_id"/>
                <field name="duration"/>
                <field name="state" widget="badge"/>
                <field name="payslip_id"/>
            </tree>
        </field>
    </record>

    <!-- Work Entry Form View -->
    <record id="view_work_entry_form" model="ir.ui.view">
        <field name="name">custom_payroll.work_entry.form</field>
        <field name="model">custom_payroll.work_entry</field>
        <field name="arch" type="xml">
            <form string="Work Entry">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                    <button name="action_validate" string="Validate" type="object" states="confirmed"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Work Entry"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" widget="many2one" options="{'no_create': True}"/>
                            <field name="contract_id"/>
                            <field name="work_entry_type_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                            <field name="duration" readonly="1"/>
                            <field name="date" readonly="1"/>
                        </group>
                    </group>
                    <field name="notes" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Work Entry Calendar View -->
    <record id="view_work_entry_calendar" model="ir.ui.view">
        <field name="name">custom_payroll.work_entry.calendar</field>
        <field name="model">custom_payroll.work_entry</field>
        <field name="arch" type="xml">
            <calendar string="Work Entries" date_start="date_start" date_stop="date_stop"
                      color="employee_id" mode="month"
                      event_open_popup="true">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="work_entry_type_id"/>
                <field name="duration"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Work Entry Search View -->
    <record id="view_work_entry_search" model="ir.ui.view">
        <field name="name">custom_payroll.work_entry.search</field>
        <field name="model">custom_payroll.work_entry</field>
        <field name="arch" type="xml">
            <search string="Search Work Entries">
                <field name="employee_id"/>
                <field name="work_entry_type_id"/>
                <field name="state"/>
                <field name="date"/>
                <filter string="Today" name="today" domain="[('date','=',context_today())]"/>
                <filter string="This Week" name="this_week" domain="[('date','&gt;=',context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'work_entry_type_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Work Entry Action -->
    <record id="action_work_entry" model="ir.actions.act_window">
        <field name="name">Work Entries</field>
        <field name="res_model">custom_payroll.work_entry</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="search_view_id" ref="view_work_entry_search"/>
    </record>

    <!-- Work Entry Menu -->
    <menuitem id="menu_work_entry" name="Work Entries" parent="menu_payroll_root" action="action_work_entry" sequence="60"/>
</odoo>
