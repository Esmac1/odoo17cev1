<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Contract Tree View -->
    <record id="view_contract_tree" model="ir.ui.view">
        <field name="name">custom_payroll.contract.tree</field>
        <field name="model">custom_payroll.contract</field>
        <field name="arch" type="xml">
            <tree string="Contracts">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="wage"/>
                <field name="state" widget="badge" decoration-success="state=='active'" decoration-danger="state in ['expired','cancel']"/>
                <field name="salary_structure_id"/>
            </tree>
        </field>
    </record>

    <!-- Contract Form View -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">custom_payroll.contract.form</field>
        <field name="model">custom_payroll.contract</field>
        <field name="arch" type="xml">
            <form string="Employee Contract">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="draft"/>
                    <button name="action_expire" string="Expire" type="object" states="active"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft"/>
                    <button name="action_renew" string="Renew" type="object" states="expired"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired,cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_activate" type="object" class="oe_stat_button" icon="fa-check" states="draft">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Activate</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Contract Reference"/>
                        </h1>
                        <h2>
                            <field name="employee_id" widget="many2one" options="{'no_create': True}"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="trial_date_end"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="wage_type"/>
                            <field name="wage"/>
                            <field name="hourly_wage" readonly="1"/>
                            <field name="salary_structure_id"/>
                        </group>
                    </group>
                    <group string="Working Schedule">
                        <field name="working_hours"/>
                        <field name="working_days"/>
                    </group>
                    <group string="Allowances">
                        <field name="housing_allowance"/>
                        <field name="transport_allowance"/>
                        <field name="medical_allowance"/>
                        <field name="other_allowance"/>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Contract Search View -->
    <record id="view_contract_search" model="ir.ui.view">
        <field name="name">custom_payroll.contract.search</field>
        <field name="model">custom_payroll.contract</field>
        <field name="arch" type="xml">
            <search string="Search Contracts">
                <field name="employee_id"/>
                <field name="state"/>
                <field name="date_start"/>
                <filter string="Active" name="active" domain="[('state','=','active')]"/>
                <filter string="Expired" name="expired" domain="[('state','=','expired')]"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Contract Action -->
    <record id="action_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">custom_payroll.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_contract_search"/>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- Contract Menu -->
    <menuitem id="menu_contract" name="Contracts" parent="menu_payroll_root" action="action_contract" sequence="30"/>
</odoo>
