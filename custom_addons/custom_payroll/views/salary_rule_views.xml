<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Salary Rule Tree View -->
    <record id="view_salary_rule_tree" model="ir.ui.view">
        <field name="name">custom_payroll.salary_rule.tree</field>
        <field name="model">custom_payroll.salary_rule</field>
        <field name="arch" type="xml">
            <tree string="Salary Rules">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="rule_type"/>
                <field name="amount_type"/>
                <field name="amount"/>
                <field name="active" widget="boolean"/>
            </tree>
        </field>
    </record>

    <!-- Salary Rule Form View -->
    <record id="view_salary_rule_form" model="ir.ui.view">
        <field name="name">custom_payroll.salary_rule.form</field>
        <field name="model">custom_payroll.salary_rule</field>
        <field name="arch" type="xml">
            <form string="Salary Rule">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Rule Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="category_id"/>
                            <field name="rule_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="amount_type"/>
                            <field name="amount"/>
                            <field name="amount_formula"/>
                        </group>
                    </group>
                    <group string="Conditions">
                        <field name="condition_select"/>
                        <field name="condition_range" attrs="{'invisible': [('condition_select','!=','range')]}"/>
                        <field name="condition_python" attrs="{'invisible': [('condition_select','!=','python')]}" nolabel="1"/>
                    </group>
                    <group string="Applies To">
                        <field name="applies_to"/>
                        <field name="department_id" attrs="{'invisible': [('applies_to','!=','department')]}"/>
                        <field name="job_id" attrs="{'invisible': [('applies_to','!=','job')]}"/>
                        <field name="tag_ids" attrs="{'invisible': [('applies_to','!=','tag')]}"/>
                    </group>
                    <group string="Accounting">
                        <field name="account_debit"/>
                        <field name="account_credit"/>
                        <field name="journal_id"/>
                    </group>
                    <notebook>
                        <page string="Structures">
                            <field name="structure_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="active" widget="boolean"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Salary Rule Search View -->
    <record id="view_salary_rule_search" model="ir.ui.view">
        <field name="name">custom_payroll.salary_rule.search</field>
        <field name="model">custom_payroll.salary_rule</field>
        <field name="arch" type="xml">
            <search string="Search Salary Rules">
                <field name="name"/>
                <field name="code"/>
                <field name="rule_type"/>
                <field name="active"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Allowances" name="allowances" domain="[('rule_type','=','allowance')]"/>
                <filter string="Deductions" name="deductions" domain="[('rule_type','=','deduction')]"/>
            </search>
        </field>
    </record>

    <!-- Salary Rule Action -->
    <record id="action_salary_rule" model="ir.actions.act_window">
        <field name="name">Salary Rules</field>
        <field name="res_model">custom_payroll.salary_rule</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_salary_rule_search"/>
    </record>

    <!-- Salary Rule Menu -->
    <menuitem id="menu_salary_rule" name="Salary Rules" parent="menu_payroll_configuration" action="action_salary_rule" sequence="10"/>
</odoo>
