<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="priority"/>
                <field name="requester_id"/>
                <field name="assigned_id"/>
                <field name="team_id"/>
                <field name="create_date"/>
                <field name="closed_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-2">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="mb-1">
                                    <small>Requester: </small>
                                    <field name="requester_id" widget="many2one_avatar"/>
                                </div>
                                <div class="mb-1">
                                    <small>Assigned: </small>
                                    <field name="assigned_id" widget="many2one_avatar"/>
                                </div>
                                <div class="mb-1">
                                    <small>Priority: </small>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="mb-1">
                                    <small>Team: </small>
                                    <field name="team_id" widget="badge"/>
                                </div>
                                <div t-if="record.closed_date.raw_value">
                                    <small>Closed: </small>
                                    <field name="closed_date" widget="datetime"/>
                                </div>
                                <div t-elif="record.create_date.raw_value">
                                    <small>Created: </small>
                                    <field name="create_date" widget="datetime"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <field name="stage_id" widget="badge"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
