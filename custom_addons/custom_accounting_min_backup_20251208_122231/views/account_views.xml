<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_form" model="ir.ui.view">
        <field name="name">custom_accounting.account.form</field>
        <field name="model">custom_accounting.account</field>
        <field name="arch" type="xml">
            <form string="Account">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="complete_name" readonly="1"/>
                            <field name="account_type"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="reconcile"/>
                            <field name="active"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group string="Balances">
                        <field name="debit" readonly="1"/>
                        <field name="credit" readonly="1"/>
                        <field name="balance" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_tree" model="ir.ui.view">
        <field name="name">custom_accounting.account.tree</field>
        <field name="model">custom_accounting.account</field>
        <field name="arch" type="xml">
            <tree string="Chart of Accounts" default_order="code">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="balance"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_account" model="ir.actions.act_window">
        <field name="name">Chart of Accounts</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
