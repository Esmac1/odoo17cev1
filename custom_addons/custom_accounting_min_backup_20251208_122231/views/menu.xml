<odoo>
    <!-- ROOT MENU -->
    <menuitem id="menu_custom_accounting_root"
              name="Custom Accounting"
              sequence="10"/>

    <!-- ===== ACTIONS ===== -->
    <!-- Chart of Accounts -->
    <record id="action_custom_account" model="ir.actions.act_window">
        <field name="name">Chart of Accounts</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Journal Entries -->
    <record id="action_custom_move" model="ir.actions.act_window">
        <field name="name">Journal Entries</field>
        <field name="res_model">custom_accounting.move</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Assets -->
    <record id="action_custom_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">custom_accounting.asset</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Bank Transactions -->
    <record id="action_custom_bank" model="ir.actions.act_window">
        <field name="name">Bank Transactions</field>
        <field name="res_model">custom_accounting.bank_transaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Recurring Transactions -->
    <record id="action_custom_recurring" model="ir.actions.act_window">
        <field name="name">Recurring Transactions</field>
        <field name="res_model">custom_accounting.recurring</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Reconciliations -->
    <record id="action_custom_reconcile" model="ir.actions.act_window">
        <field name="name">Reconciliations</field>
        <field name="res_model">custom_accounting.reconcile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Trial Balance -->
    <record id="action_trial_balance" model="ir.actions.act_window">
        <field name="name">Trial Balance</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_trial_balance_tree"/>
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>

    <!-- Balance Sheet -->
    <record id="action_balance_sheet" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_balance_sheet_tree"/>
        <field name="domain">[('account_type', 'in', ['asset', 'liability', 'equity']), ('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>

    <!-- Profit & Loss -->
    <record id="action_profit_loss" model="ir.actions.act_window">
        <field name="name">Profit &amp; Loss</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_profit_loss_tree"/>
        <field name="domain">[('account_type', 'in', ['income', 'expense']), ('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>

    <!-- ===== MENU ITEMS ===== -->
    <!-- DASHBOARD (NEW) -->
    <menuitem id="menu_accounting_dashboard"
              name="Dashboard"
              parent="menu_custom_accounting_root"
              action="action_accounting_dashboard"
              sequence="5"/>
    
    <menuitem id="menu_custom_account"
              name="Chart of Accounts"
              parent="menu_custom_accounting_root"
              action="action_custom_account"
              sequence="10"/>
    
    <menuitem id="menu_custom_move"
              name="Journal Entries"
              parent="menu_custom_accounting_root"
              action="action_custom_move"
              sequence="20"/>
    
    <menuitem id="menu_custom_assets"
              name="Assets"
              parent="menu_custom_accounting_root"
              action="action_custom_asset"
              sequence="30"/>
    
    <menuitem id="menu_custom_recurring"
              name="Recurring Transactions"
              parent="menu_custom_accounting_root"
              action="action_custom_recurring"
              sequence="40"/>
    
    <menuitem id="menu_custom_bank"
              name="Bank Transactions"
              parent="menu_custom_accounting_root"
              action="action_custom_bank"
              sequence="50"/>
    
    <menuitem id="menu_custom_reconcile"
              name="Reconciliations"
              parent="menu_custom_accounting_root"
              action="action_custom_reconcile"
              sequence="60"/>
    
    <menuitem id="menu_trial_balance"
              name="Trial Balance"
              parent="menu_custom_accounting_root"
              action="action_trial_balance"
              sequence="70"/>
    
    <!-- Financial Reports Submenu (NEW) -->
    <menuitem id="menu_financial_reports"
              name="Financial Reports"
              parent="menu_custom_accounting_root"
              sequence="80"/>
    
    <menuitem id="menu_balance_sheet"
              name="Balance Sheet"
              parent="menu_financial_reports"
              action="action_balance_sheet"
              sequence="10"/>
    
    <menuitem id="menu_profit_loss"
              name="Profit &amp; Loss"
              parent="menu_financial_reports"
              action="action_profit_loss"
              sequence="20"/>
</odoo>
