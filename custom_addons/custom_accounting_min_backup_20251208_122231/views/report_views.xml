<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Trial Balance Tree View -->
    <record id="view_trial_balance_tree" model="ir.ui.view">
        <field name="name">custom_accounting.trial.balance.tree</field>
        <field name="model">custom_accounting.account</field>
        <field name="arch" type="xml">
            <tree string="Trial Balance" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance" sum="Total Balance"/>
            </tree>
        </field>
    </record>

    <!-- Balance Sheet Tree View -->
    <record id="view_balance_sheet_tree" model="ir.ui.view">
        <field name="name">custom_accounting.balance.sheet.tree</field>
        <field name="model">custom_accounting.account</field>
        <field name="arch" type="xml">
            <tree string="Balance Sheet" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="balance" sum="Total Balance"/>
            </tree>
        </field>
    </record>

    <!-- Profit & Loss Tree View -->
    <record id="view_profit_loss_tree" model="ir.ui.view">
        <field name="name">custom_accounting.profit.loss.tree</field>
        <field name="model">custom_accounting.account</field>
        <field name="arch" type="xml">
            <tree string="Profit &amp; Loss" create="false" delete="false">
                <field name="code"/>
                <field name="name"/>
                <field name="account_type"/>
                <field name="balance" sum="Net Income"/>
            </tree>
        </field>
    </record>

    <!-- Trial Balance Action -->
    <record id="action_trial_balance" model="ir.actions.act_window">
        <field name="name">Trial Balance</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_trial_balance_tree"/>
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>

    <!-- Balance Sheet Action -->
    <record id="action_balance_sheet" model="ir.actions.act_window">
        <field name="name">Balance Sheet</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_balance_sheet_tree"/>
        <field name="domain">[('account_type', 'in', ['asset', 'liability', 'equity']), ('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>

    <!-- Profit & Loss Action -->
    <record id="action_profit_loss" model="ir.actions.act_window">
        <field name="name">Profit &amp; Loss</field>
        <field name="res_model">custom_accounting.account</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_profit_loss_tree"/>
        <field name="domain">[('account_type', 'in', ['income', 'expense']), ('parent_id', '=', False)]</field>
        <field name="context">{'search_default_active': 1, 'group_by': 'account_type'}</field>
    </record>
</odoo>
