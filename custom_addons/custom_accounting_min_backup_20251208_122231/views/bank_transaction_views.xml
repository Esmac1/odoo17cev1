<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_bank_transaction_tree" model="ir.ui.view">
        <field name="name">bank.transaction.tree</field>
        <field name="model">custom_accounting.bank_transaction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="amount"/>
                <field name="type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bank_transaction_form" model="ir.ui.view">
        <field name="name">bank.transaction.form</field>
        <field name="model">custom_accounting.bank_transaction</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post" type="object" string="Post" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_draft" type="object" string="Reset to Draft" class="btn-light"
                            invisible="state != 'posted'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="account_id"/>
                            <field name="journal_id"/>
                            <field name="move_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action (used by menu.xml) -->
    <record id="action_custom_bank" model="ir.actions.act_window">
        <field name="name">Bank Transactions</field>
        <field name="res_model">custom_accounting.bank_transaction</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
